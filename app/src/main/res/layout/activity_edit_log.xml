<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/background_gradient"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/logsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerTextView"
        android:layout_marginTop="16dp"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/newLogEntryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logsTextView"
        android:layout_marginTop="16dp"
        android:hint="Enter new log entry"/>

    <Button
        android:id="@+id/saveLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newLogEntryEditText"
        android:layout_marginTop="16dp"
        android:text="Save"/>

    <Button
        android:id="@+id/copyLastTwoLogsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/saveLogButton"
        android:layout_alignTop="@id/saveLogButton"
        android:layout_marginStart="8dp"
        android:text="Copy Last Two Logs"/>

    <Button
        android:id="@+id/copyAllLogsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/copyLastTwoLogsButton"
        android:layout_alignTop="@id/saveLogButton"
        android:layout_marginStart="8dp"
        android:text="Copy All Logs"/>
</RelativeLayout>
