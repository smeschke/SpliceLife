<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Processing 0 of XX Columns"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tvUserColumnValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="User Column Value"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:layout_marginEnd="8dp" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteDbKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:hint="Select Key"
            android:inputType="text"
            android:textSize="16sp"
            android:completionThreshold="1" />

        <Button
            android:id="@+id/btnSelectKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Key" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectedGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Details"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:maxLines="3"
        android:scrollHorizontally="false" />

    <Spinner
        android:id="@+id/spinnerGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSelectedBeltParameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belt Parameters"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:maxLines="3"
        android:scrollHorizontally="false" />

    <Spinner
        android:id="@+id/spinnerBeltParameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSelectedLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logs and Reports"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:maxLines="3"
        android:scrollHorizontally="false" />

    <Spinner
        android:id="@+id/spinnerLogs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <GridLayout
            android:id="@+id/gridButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:orientation="horizontal"
            android:layout_marginTop="16dp" />
    </ScrollView>
</LinearLayout>
